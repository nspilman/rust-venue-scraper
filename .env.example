# SMS Server Rust - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration - Turso
LIBSQL_URL=libsql://your-database-name.turso.io
LIBSQL_AUTH_TOKEN=your_auth_token_here

# Logging Configuration
RUST_LOG=info
LOG_LEVEL=info

# API Keys (when implementing external APIs)
TICKETMASTER_API_KEY=your_ticketmaster_key_here
EVENTBRITE_API_TOKEN=your_eventbrite_token_here
SONGKICK_API_KEY=your_songkick_key_here
BANDSINTOWN_APP_ID=your_bandsintown_app_id_here

# Rate Limiting Configuration
DEFAULT_REQUEST_DELAY_MS=500
DEFAULT_TIMEOUT_SECONDS=15
DEFAULT_MAX_RETRIES=3

# Venue-specific Configuration (for crawlers)
BLUE_MOON_BASE_URL=https://www.bluemoontavern.com
SEA_MONSTER_BASE_URL=https://www.seamonsterlounge.com

# Output Configuration
OUTPUT_DIRECTORY=output
LOG_DIRECTORY=logs

# Development/Testing
ENVIRONMENT=development

# --- Supabase Storage Configuration ---
# You can set either SUPABASE_URL or SUPABASE_PROJECT_REF. If both are set, SUPABASE_URL is used.
# Project ref from your Supabase dashboard URL
SUPABASE_PROJECT_REF=ihkgojiseqpwinwdowvm
# Alternatively, full URL (uncomment to use instead of project ref)
# SUPABASE_URL=https://ihkgojiseqpwinwdowvm.supabase.co
# Storage bucket name (required for uploads)
SUPABASE_BUCKET=
# Optional path prefix inside the bucket (e.g., env name). Leave empty for none.
SUPABASE_PREFIX=
# Service role key (server-side secret). Needed for writes; not needed for public reads.
SUPABASE_SERVICE_ROLE_KEY=
